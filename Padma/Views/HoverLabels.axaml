<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Padma.Views">
    <Design.PreviewWith>
        <controls:HoverLabels CornerRadius="21" Margin="5" />
    </Design.PreviewWith>

    <Style Selector="controls|HoverLabels">
        <!-- Set Defaults -->
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background" Value="#C4A484" />
        <Setter Property="CornerRadius" Value="21" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Padding="15,7" Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <StackPanel>
                        <Label Padding="0" HorizontalAlignment="Center" Content="{TemplateBinding SmallText}"
                               FontSize="10" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>